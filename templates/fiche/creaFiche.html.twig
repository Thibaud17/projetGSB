{% extends 'base.html.twig' %}

{% block title %}Votre fiche du mois{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>


<div class="example-wrapper">
  <div class="jumbotron">
    <h1>Edition de la fiche</h1>
  </div>
  <div class="container">
    <div class="row">
      <div class="card-body">
        <h4>Voici les frais forfaits actuellement saisis : </h4>
        <table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      {% for type in form.lesForfaits.leType %}
      <th scope="col">{{type.libelle}}</th>
      {% endfor %}
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>Quantit√© :</td>
      {{ form_start(form) }}
      {% for forfait in form.lesForfaits %}
      
        <td>{{ form_row(forfait.qte) }}</td>
        
      {% endfor %}
      
    <button class="btn btn-primary" type="submit">Sauvegarder</button>
    {{ form_end(form) }}
    </tr>
  </tbody>
</table>
      <div class="row">
        <a class="btn btn-primary">Modifier les frais forfaits</a>
      </div>
    </div>





  <div class="row">
    <div class="card-body">
      <h4>Voici les frais hors forfaits actuellement saisis : </h4>
      <br>
      <div class="row">
        <a href="#" class="btn btn-primary">Modifier les frais hors forfaits</a>
      </div>
    </div>
  </div>
</div>
{% endblock %}
