{% extends 'base.html.twig' %}

{% block title %}Votre fiche du mois{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>


<div class="example-wrapper">
  <div class="jumbotron">
    <h1>Edition de la fiche</h1>
  </div>
  <div class="container">
    <div class="row">
      <div class="card-body">
        <h4>Voici les frais forfaits actuellement saisis : </h4>
        <div>
        {{ form_start(form) }}
        {% for forfait in form.lesForfaits %}

          {{ form_row(forfait.qte) }}
          {{ form_row(forfait.leType) }}

        {% endfor %}
        </div>
        <button class="btn btn-primary" type="submit">Modifier les frais forfaits</button>
        {{ form_end(form) }}
      <div class="row">
      </div>
    </div>





  <div class="row">
    <div class="card-body">
      <h4>Voici les frais hors forfaits actuellement saisis : </h4>
      <br>
      <div class="row">
        <a href="#" class="btn btn-primary">Modifier les frais hors forfaits</a>
      </div>
    </div>
  </div>
</div>
{% endblock %}
